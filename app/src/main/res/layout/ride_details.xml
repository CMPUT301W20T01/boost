<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rideDetailsDriverText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Driver: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rideDetailsPickupText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pickup:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/rideDetailsDriverText"
        app:layout_constraintTop_toBottomOf="@+id/rideDetailsDriverText" />

    <TextView
        android:id="@+id/rideDetailsPickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="start loc"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/rideDetailsPickupText"
        app:layout_constraintTop_toTopOf="@+id/rideDetailsPickupText" />

    <TextView
        android:id="@+id/rideDetailsDropoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="end loc"
        app:layout_constraintStart_toEndOf="@+id/rideDetailsDropoffText"
        app:layout_constraintTop_toTopOf="@+id/rideDetailsDropoffText"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rideDetailsDropoffText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dropoff:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/rideDetailsPickupText"
        app:layout_constraintTop_toBottomOf="@+id/rideDetailsPickupText" />

    <TextView
        android:id="@+id/rideDetailsDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Driver name"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/rideDetailsDriverText"
        app:layout_constraintTop_toTopOf="@+id/rideDetailsDriverText" />

    <TextView
        android:id="@+id/rideDetailsRiderText"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Rider: "
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/rideDetailsDriver"
        app:layout_constraintTop_toTopOf="@+id/rideDetailsDriver" />

    <TextView
        android:id="@+id/rideDetailsRider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Rider name"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/rideDetailsRiderText"
        app:layout_constraintTop_toTopOf="@+id/rideDetailsRiderText" />

</androidx.constraintlayout.widget.ConstraintLayout>