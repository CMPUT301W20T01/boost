<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/yellow_background_home_screen"
        android:layout_width="0dp"
        android:layout_height="218dp"
        android:background="#FFAA1D"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userProfilePublicRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 👍 8  👎"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/userProfilePublicRatingText" />

    <TextView
        android:id="@+id/userProfilePublicRating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/yellow_background_home_screen"
        app:layout_constraintEnd_toEndOf="@+id/yellow_background_home_screen"
        app:layout_constraintStart_toStartOf="@+id/yellow_background_home_screen"
        app:layout_constraintTop_toTopOf="@+id/yellow_background_home_screen" />

    <TextView
        android:id="@+id/userProfilePublicRatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rating:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfilePublicPhoneText" />

    <TextView
        android:id="@+id/userProfilePublicPhoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Phone:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfilePublicEmailText" />

    <TextView
        android:id="@+id/userProfilePublicEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email: "
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfilePublicNameText" />

    <TextView
        android:id="@+id/userProfilePublicNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Name:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellow_background_home_screen" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.31" />

    <TextView
        android:id="@+id/userProfilePublicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/userProfilePublicNameText"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/userProfilePublicNameText" />

    <TextView
        android:id="@+id/userProfilePublicEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:inputType="textEmailAddress"
        android:text="email@email.com"
        app:layout_constraintBottom_toBottomOf="@+id/userProfilePublicEmailText"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/userProfilePublicEmailText"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/userProfilePublicPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="@+id/userProfilePublicPhoneText"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/userProfilePublicPhoneText"
        tools:text=" 403 555 5555"
        android:clickable="true"
        android:focusable="true"/>

    <Button
        android:id="@+id/userProfilePublicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Make Changes"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfilePublicRating" />

</androidx.constraintlayout.widget.ConstraintLayout>