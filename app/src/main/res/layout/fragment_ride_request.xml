<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RequestDetailsFragment">

    <TextView
        android:id="@+id/ride_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_black"
        android:textColor="@color/colourPrimaryDark"
        android:text="Ride Details"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/riderDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato"
        android:text="Rider: "
        android:textColor="@color/colourPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ride_detail_title" />

    <TextView
        android:id="@+id/riderText"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/lato"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/riderDesc"
        app:layout_constraintStart_toEndOf="@+id/riderDesc"
        app:layout_constraintTop_toTopOf="@+id/riderDesc"
        app:layout_constraintBaseline_toBaselineOf="@id/riderDesc" />

    <TextView
        android:id="@+id/fareDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato"
        android:text="Fare:"
        android:textColor="@color/colourPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/riderDesc"
        app:layout_constraintTop_toBottomOf="@+id/riderDesc" />

    <TextView
        android:id="@+id/fareText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/lato"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fareDesc"
        app:layout_constraintStart_toEndOf="@+id/fareDesc"
        app:layout_constraintTop_toTopOf="@+id/fareDesc" />

    <TextView
        android:id="@+id/endDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato"
        android:text="Destination:"
        android:textColor="@color/colourPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/startDesc"
        app:layout_constraintTop_toBottomOf="@+id/startDesc" />

    <TextView
        android:id="@+id/endText"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/lato"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/endDesc"
        app:layout_constraintStart_toEndOf="@+id/endDesc"
        app:layout_constraintTop_toTopOf="@+id/endDesc" />

    <TextView
        android:id="@+id/startDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato"
        android:text="Pickup:"
        android:textColor="@color/colourPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/fareDesc"
        app:layout_constraintTop_toBottomOf="@+id/fareDesc" />

    <TextView
        android:id="@+id/startText"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/lato"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/startDesc"
        app:layout_constraintStart_toEndOf="@+id/startDesc"
        app:layout_constraintTop_toTopOf="@+id/startDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>