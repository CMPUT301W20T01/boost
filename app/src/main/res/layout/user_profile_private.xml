<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:background="@color/colourPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/go_home_button"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="178dp"
                android:background="@drawable/rounded_button_dark"
                android:text="Home"
                android:textAllCaps="false"
                android:textColor="@color/colourGray"
                android:textSize="12sp" />

            <Button
                android:id="@+id/userProfilePrivateButton"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="178dp"
                android:background="@drawable/rounded_button_dark"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/colourGray"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="110dp"
                android:layout_marginBottom="44dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userProfileFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textSize="24sp"
                    android:textColor="@color/colourPrimaryDark"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/userProfileUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="24sp"
                    android:textColor="@color/colourPrimaryDark"

                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/colourPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="40dp">

                <ImageView
                    android:id="@+id/email_icon_private"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_email"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/userProfilePrivateEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="email@email.com"
                    android:textSize="24sp"
                    android:textColor="@color/colourPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="40dp">

                <ImageView
                    android:id="@+id/call_icon_private"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_phone"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/userProfilePrivatePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text=" 403 555 5555"
                    android:textSize="24sp"
                    android:textColor="@color/colourPrimaryDark" />

            </LinearLayout>


            <TextView
                android:id="@+id/userProfilePrivateRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colourPrimaryDark"
                android:layout_marginLeft="20dp"
                android:text="24 👍 8  👎"
                android:textSize="24sp" />


        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>