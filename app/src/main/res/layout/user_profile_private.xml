<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/yellow_background_home_screen"
        android:layout_width="0dp"
        android:layout_height="218dp"
        android:background="#FFAA1D"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userProfilePrivateRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 ðŸ‘ 8  ðŸ‘Ž"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/userProfilePrivateRatingText" />

    <TextView
        android:id="@+id/userProfilePrivateRating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/yellow_background_home_screen"
        app:layout_constraintEnd_toEndOf="@+id/yellow_background_home_screen"
        app:layout_constraintStart_toStartOf="@+id/yellow_background_home_screen"
        app:layout_constraintTop_toTopOf="@+id/yellow_background_home_screen" />

    <TextView
        android:id="@+id/userProfilePrivateRatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rating:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfilePrivatePhoneText" />

    <TextView
        android:id="@+id/userProfilePrivatePhoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Phone:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfilePrivateEmailText" />

    <TextView
        android:id="@+id/userProfilePrivateEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email: "
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfilePrivateNameText" />

    <TextView
        android:id="@+id/userProfilePrivateNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Name:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellow_background_home_screen" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.31" />

    <TextView
        android:id="@+id/userProfilePrivateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/userProfilePrivateNameText"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/userProfilePrivateNameText" />

    <TextView
        android:id="@+id/userProfilePrivateEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:inputType="textEmailAddress"
        android:text="email@email.com"
        app:layout_constraintBottom_toBottomOf="@+id/userProfilePrivateEmailText"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/userProfilePrivateEmailText" />

    <TextView
        android:id="@+id/userProfilePrivatePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="@+id/userProfilePrivatePhoneText"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/userProfilePrivatePhoneText"
        tools:text=" 403 555 5555" />

    <Button
        android:id="@+id/userProfilePrivateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Make Changes"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfilePrivateRating" />

</androidx.constraintlayout.widget.ConstraintLayout>